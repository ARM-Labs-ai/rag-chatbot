{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "paths": {
      "@/*": ["./*"],
      "@config/*": ["./config/*"],
      "@infra/*": ["./infrastructure/*"],
      "@use-cases/*": ["./use-cases/*"]
    },
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "types": ["vitest/globals"]
  },
  "include": ["src"]
}
